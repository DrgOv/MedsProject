                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <Button fx:id="deleteProblemButton" layoutX="173.0" layoutY="438.0" mnemonicParsing="false" onAction="#deleteProblemButtonAction" text="DELETE PROBLEM" textAlignment="CENTER" wrapText="true" AnchorPane.bottomAnchor="93.0" AnchorPane.leftAnchor="173.0" AnchorPane.rightAnchor="172.0" AnchorPane.topAnchor="438.0" />
                    </children>
                </AnchorPane>
            </center>
            <right>
                <AnchorPane fx:id="doctorDetailsAnchorPane" BorderPane.alignment="CENTER">
               <children>
                        <Button fx:id="requestHelpButton" layoutX="-36.0" layoutY="503.0" mnemonicParsing="false" onAction="#requestHelpButtonAction" text="REQUEST HELP" AnchorPane.bottomAnchor="93.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="438.0" />
